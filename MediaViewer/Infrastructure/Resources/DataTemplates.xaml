<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:conv="clr-namespace:MediaViewer.Infrastructure.Converters"
                    xmlns:views="clr-namespace:MediaViewer.Views"
                    xmlns:vm="clr-namespace:MediaViewer.ViewModels">

    <conv:CommentsConverter x:Key="CommentsConverter" />

    <DataTemplate DataType="{x:Type vm:AboutViewModel}">
        <views:AboutView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:RandomViewModel}">
        <views:RandomView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:MvvmLightViewModel}">
        <views:MvvmLightView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:ValidationsConvertesViewModel}">
        <views:ValidationsConvertesView />
    </DataTemplate>

</ResourceDictionary>